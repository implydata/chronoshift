{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "importHelpers": true,
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "declarationDir": "types",
    "moduleResolution": "node"
  },
  "include": ["src"]
}
